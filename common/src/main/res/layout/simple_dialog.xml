<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/simple_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="14.67dp"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.2"
        android:maxEms="8"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dialog_title_textSize"
        android:visibility="gone"
        tools:text="对话框标题"
        tools:visibility="visible" />
    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:divider="#fff"
        android:fastScrollEnabled="true"
        android:dividerHeight="1.0dip"
        android:paddingLeft="3.0dip"
        android:paddingRight="3.0dip"
        android:paddingTop="3.0dip"
        android:visibility="gone"/>
        <!--tools:visibility="visible"/>-->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="14dp"
        android:gravity="left"
        android:lineSpacingMultiplier="1.2"
        android:minLines="2"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarFadeDuration="1000"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dialog_msg_textSize"
        android:visibility="gone"
        tools:text="对话框内容，本次升级的主要内容有神马"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp"
        android:background="@drawable/simple_dialog_input_bg"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="@color/simpleDialogInputTextHint"
        android:textSize="@dimen/dialog_input_textSize"
        android:visibility="gone"
        tools:text="dudu888999"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/dividerHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/driver_side"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/leftBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_48"
            android:layout_weight="1"
            android:background="@drawable/button_left_selector"
            android:text="@string/cancel"
            android:textSize="@dimen/dialog_button_textSize"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/dividerVertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/driver_side"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/rightBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_48"
            android:layout_weight="1"
            android:background="@drawable/button_right_selector"
            android:text="@string/confirm"
            android:textSize="@dimen/dialog_button_textSize"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>